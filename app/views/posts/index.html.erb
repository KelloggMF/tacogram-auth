<div class="row">
  <% for post in @posts %>
    <div class="col-3">
      <h4>
        <% @poster = User.find_by({"id" => post["user_id"]})%>
        <% if @poster != nil %>
        <%= @poster.first_name%>
        <% else %>
        Author unknown
        <% end %>
      </h4>
      <img class="img-fluid" src="<%= post["image"] %>" class="w-full">
      <p>
      <%= post["body"] %>
      </p>
    </div>
  <% end %>
</div>

